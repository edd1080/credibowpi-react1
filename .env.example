# CrediBowpi Mobile - Environment Variables Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# BOWPI AUTHENTICATION ENDPOINTS
# =============================================================================

# Bowpi Base URL (Production)
EXPO_PUBLIC_BOWPI_BASE_URL=https://bowpi.credibowpi.com

# Bowpi Authentication Service URL
EXPO_PUBLIC_BOWPI_AUTH_URL=https://bowpi.credibowpi.com/micro-auth-service

# Bowpi Session Management URL
EXPO_PUBLIC_BOWPI_SESSION_URL=https://bowpi.credibowpi.com/management

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Main API Base URL
EXPO_PUBLIC_API_BASE_URL=https://api.credibowpi.com

# API Timeout (milliseconds)
EXPO_PUBLIC_API_TIMEOUT=30000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Encryption Key for Local Storage
EXPO_PUBLIC_ENCRYPTION_KEY=your_secure_encryption_key_here

# JWT Secret (if needed for client-side validation)
EXPO_PUBLIC_JWT_SECRET=your_jwt_secret_here

# =============================================================================
# ANALYTICS AND MONITORING
# =============================================================================

# Metrics Endpoint for Authentication Analytics
EXPO_PUBLIC_METRICS_ENDPOINT=https://metrics.credibowpi.com/auth

# Error Reporting Endpoint
EXPO_PUBLIC_ERROR_REPORTING_ENDPOINT=https://errors.credibowpi.com/report

# Performance Monitoring Endpoint
EXPO_PUBLIC_PERFORMANCE_ENDPOINT=https://performance.credibowpi.com/metrics

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================

# Build Type (development, staging, production)
EXPO_PUBLIC_BUILD_TYPE=production

# App Version
EXPO_PUBLIC_APP_VERSION=1.0.0

# Build Number
EXPO_PUBLIC_BUILD_NUMBER=1

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable Bowpi Authentication
EXPO_PUBLIC_ENABLE_BOWPI_AUTH=true

# Enable Offline Mode
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true

# Enable Biometric Authentication
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true

# Enable Session Recovery
EXPO_PUBLIC_ENABLE_SESSION_RECOVERY=true

# Enable Suspicious Activity Monitoring
EXPO_PUBLIC_ENABLE_SUSPICIOUS_ACTIVITY_MONITORING=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Enable Production Logs
EXPO_PUBLIC_ENABLE_PRODUCTION_LOGS=false

# Enable Security Logs
EXPO_PUBLIC_ENABLE_SECURITY_LOGS=true

# Enable Performance Logs
EXPO_PUBLIC_ENABLE_PERFORMANCE_LOGS=true

# Log Level (debug, info, warn, error)
EXPO_PUBLIC_LOG_LEVEL=error

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Bowpi Base URL (for local testing)
EXPO_PUBLIC_DEV_BOWPI_BASE_URL=http://10.14.11.200:7161

# Development API Base URL
EXPO_PUBLIC_DEV_API_BASE_URL=http://10.14.11.200:7161

# Enable Debug Mode
EXPO_PUBLIC_DEBUG_MODE=false

# Enable Mock Services (for testing without backend)
EXPO_PUBLIC_ENABLE_MOCK_SERVICES=false