{
  "name": "credibowpi-mobile",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "start:legacy": "AUTH_TYPE=legacy expo start",
    "start:bowpi": "AUTH_TYPE=bowpi expo start",
    "android": "expo start --android",
    "android:legacy": "AUTH_TYPE=legacy expo start --android",
    "android:bowpi": "AUTH_TYPE=bowpi expo start --android",
    "ios": "expo start --ios",
    "ios:legacy": "AUTH_TYPE=legacy expo start --ios",
    "ios:bowpi": "AUTH_TYPE=bowpi expo start --ios",
    "web": "expo start --web",
    "web:legacy": "AUTH_TYPE=legacy expo start --web",
    "web:bowpi": "AUTH_TYPE=bowpi expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:legacy": "AUTH_TYPE=legacy jest",
    "test:bowpi": "AUTH_TYPE=bowpi jest",
    "test:dual-auth": "jest src/services/auth/ src/__tests__/integration/DualAuthSystem.test.ts src/__tests__/dual-auth/ --coverage",
    "test:auth-config": "jest src/services/auth/__tests__/AuthConfiguration.test.ts",
    "test:legacy-provider": "jest src/services/auth/providers/__tests__/LegacyAuthProvider.test.ts",
