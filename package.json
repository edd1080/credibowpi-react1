    "test:bowpi:errors": "jest src/services/bowpi/__tests__/ErrorHandling.test.ts",
    "test:integration": "./scripts/test-integration.sh",
    "test:integration:unit": "jest src/__tests__/integration/ --coverage",
    "test:integration:login": "jest src/__tests__/integration/LoginFlow.test.ts",
    "test:integration:offline": "jest src/__tests__/integration/OfflineOnlineAuth.test.ts",
    "test:integration:logout": "jest src/__tests__/integration/LogoutFlow.test.ts",
    "test:integration:session": "jest src/__tests__/integration/SessionPersistence.test.ts",
    "test:integration:network": "jest src/__tests__/integration/NetworkConnectivityAuth.test.ts",
    "test:integration:complete": "jest src/__tests__/integration/AuthenticationIntegration.test.ts",
    "test:security": "./scripts/test-security.sh",
    "test:security:unit": "jest --config=src/__tests__/security-performance/jest.config.js",
    "test:security:tokens": "jest src/__tests__/security-performance/TokenSecurity.test.ts",
    "test:security:auth": "jest src/__tests__/security-performance/AuthenticationSecurity.test.ts",
    "test:security:headers": "jest src/__tests__/security-performance/HeaderSecurity.test.ts",
    "test:performance": "jest src/__tests__/security-performance/AuthPerformance.test.ts",
    "test:load": "jest src/__tests__/security-performance/LoadTesting.test.ts",
    "test:security-performance": "jest --config=src/__tests__/security-performance/jest.config.js --coverage",
    "test:deployment": "node scripts/verify-deployment.js",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "deploy:production": "./scripts/deploy-production.sh",
    "verify:deployment": "npm run test:deployment && npm run type-check && npm run lint"
  },
  "dependencies": {
