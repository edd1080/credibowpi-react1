    "test:dual-suite": "jest src/__tests__/dual-auth/DualAuthTestSuite.test.ts",
    "test:bowpi": "./scripts/test-bowpi.sh",
    "test:bowpi:unit": "jest src/services/bowpi/__tests__/ --coverage",
    "test:bowpi:otp": "jest src/services/bowpi/__tests__/BowpiOTPService.test.ts",
    "test:bowpi:hmac": "jest src/services/bowpi/__tests__/BowpiHMACService.test.ts",
    "test:bowpi:crypto": "jest src/services/bowpi/__tests__/BowpiCryptoService.test.ts",
